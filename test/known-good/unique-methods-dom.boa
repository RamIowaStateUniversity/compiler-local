	before n: Project -> {
		file_name=n.name;
	}

	before node: CodeRepository -> {
		snapshot := getsnapshot(node, "SOURCE_JAVA_JLS");
		foreach (i: int; def(snapshot[i]))
			visit(snapshot[i]);
		stop;
	}

	before m: Method -> {
	    pattern := getMethodEncoding(m);
		number << 1;
	    add(patterns_set, pattern);   
	}
});
